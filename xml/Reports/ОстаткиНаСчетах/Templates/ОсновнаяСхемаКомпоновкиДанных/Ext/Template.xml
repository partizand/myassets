		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	Личный.Ссылка КАК Счет,
	Личный.Наименование КАК Наименование,
	Личный.Вид КАК Вид,
	Личный.ВидСчета КАК ВидСчета,
	Личный.Валюта КАК Валюта,
	Личный.Валютный КАК Валютный,
	ЛичныйОстатки.СуммаОстаток КАК Сумма,
	ЛичныйОстатки.СуммаОстатокДт КАК СуммаОстатокДт,
	ЛичныйОстатки.СуммаОстатокКт КАК СуммаОстатокКт,
	ВЫБОР
		КОГДА Личный.Вид = &amp;Активный
			ТОГДА ЛичныйОстатки.СуммаОстатокДт
		КОГДА Личный.Вид = &amp;Пассивный
			ТОГДА ЛичныйОстатки.СуммаОстатокКт
		ИНАЧЕ ЛичныйОстатки.СуммаОстаток
	КОНЕЦ КАК СуммаУсловие
ИЗ
	РегистрБухгалтерии.Личный.Остатки КАК ЛичныйОстатки
		ЛЕВОЕ СОЕДИНЕНИЕ ПланСчетов.Личный КАК Личный
		ПО ЛичныйОстатки.Счет = Личный.Ссылка</query>
